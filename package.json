{
  "name": "cap-adman",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "repository": "<Add your repository here>",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@sap/cds": "^5",
    "express": "^4"
  },
  "devDependencies": {
    "@sap/edm-converters": "^1.0.41",
    "sqlite3": "^5.0.2"
  },
  "scripts": {
    "start": "cds run",
    "build": "mbt build -p=cf --mtar=AddressManager.mtar",
    "deploy": "cf deploy mta_archives/AddressManager.mtar",
    "watch": "npx cds watch"
  },
  "cds": {
    "requires": {
      "API_BUSINESS_PARTNER": {
        "kind": "odata",
        "model": "srv\\external\\API_BUSINESS_PARTNER",
        "credentials": {
          "destination": "S4H"
        }
      }
    }
  },
  "eslintConfig": {
    "extends": "eslint:recommended",
    "env": {
      "es2020": true,
      "node": true,
      "jest": true,
      "mocha": true
    },
    "globals": {
      "SELECT": true,
      "INSERT": true,
      "UPDATE": true,
      "DELETE": true,
      "CREATE": true,
      "DROP": true,
      "CDL": true,
      "CQL": true,
      "CXL": true,
      "cds": true
    },
    "rules": {
      "no-console": "off",
      "require-atomic-updates": "off"
    }
  }
}
